#!/bin/bash
################################################################################
# Update NPM Global Packages
#
# DESCRIPTION:
#   Checks for and updates outdated global npm packages.
#   Only updates packages that have newer versions available.
#
# USAGE:
#   Called by update.sh, or run directly:
#   ./update_npm_packages
#
# WHAT IT DOES:
#   1. Checks if npm is installed, skips if not found
#   2. Runs 'npm outdated -g' to find outdated packages
#   3. Updates each outdated package individually
#   4. Reports results for each package
#
# DEPENDENCIES:
#   - npm (skips if not installed)
#   - Internet connection
#
# NOTES:
#   This only updates packages that are already installed globally.
#   To install new packages, use install_npm_packages instead.
#
################################################################################

set -euo pipefail

# shellcheck source=lib.sh
source "$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)/lib.sh"

# Main function
main() {
    if ! command -v npm &> /dev/null; then
        warn "npm not installed, skipping package updates"
        return
    fi

    log "Checking for npm package updates..."

    # Get list of outdated global packages
    outdated=$(npm outdated -g --parseable 2>/dev/null || true)

    if [[ -n "$outdated" ]]; then
        log "Updating npm global packages..."
        # Update each outdated package
        while IFS= read -r line; do
            if [[ -n "$line" ]]; then
                package=$(echo "$line" | cut -d: -f4)
                if [[ -n "$package" ]]; then
                    log "Updating: $package"
                    npm update -g "$package" 2>/dev/null || warn "Failed to update $package"
                fi
            fi
        done <<< "$outdated"
        success "npm packages updated"
    else
        success "All npm packages are up to date"
    fi
}

# Run if executed directly
if [[ "${BASH_SOURCE[0]}" == "${0}" ]]; then
    main "$@"
fi