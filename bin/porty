#!/usr/bin/env bash

# $ porty info 3000
# $ porty kill 3000

set +x
set -e

case "$1" in
    info)
        lsof -i :$2
        for pid in $(lsof -t -i :$2)
        do
            ps -ef | grep --regexp=$pid
        done
        ;;
    kill)
        for pid in $(lsof -t -i :$2)
        do
            echo "kill $pid"
            kill $pid
        done
        ;;
    *)
        echo "porty is a tool used to work with unix processes in the context of ports"
        echo ""
        echo "Usage:"
        echo -e "info <port>\t Show process information"
        echo -e "kill <port>\t Kill all processes"
        ;;
esac
