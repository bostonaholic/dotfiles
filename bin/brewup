#!/bin/bash

set -euo pipefail

# shellcheck disable=SC1091
source "${HOME}/.colors"

printf "%b===>%b brew update%b\n" "${GREEN}" "${WHITE_BOLD}" "${NO_COLOR}" && \
    brew update

printf "%b===>%b brew upgrade%b\n" "${GREEN}" "${WHITE_BOLD}" "${NO_COLOR}" && \
    brew upgrade

printf "%b===>%b brew upgrade --cask%b\n" "${GREEN}" "${WHITE_BOLD}" "${NO_COLOR}" && \
    brew upgrade --cask

printf "%b===>%b brew doctor --verbose%b\n" "${GREEN}" "${WHITE_BOLD}" "${NO_COLOR}" && \
    brew doctor --verbose

printf "%b===>%b brew outdated%b\n" "${GREEN}" "${WHITE_BOLD}" "${NO_COLOR}" && \
    brew outdated

printf "%b===>%b brew outdated --cask%b\n" "${GREEN}" "${WHITE_BOLD}" "${NO_COLOR}" && \
    brew outdated --cask

printf "%b===>%b brew cleanup -s%b\n" "${GREEN}" "${WHITE_BOLD}" "${NO_COLOR}" && \
    # -s Scrub the cache
    brew cleanup -s

printf "%b===>%b rm -rf $(brew --cache)%b\n" "${GREEN}" "${WHITE_BOLD}" "${NO_COLOR}" && \
    rm -rf "$(brew --cache)"

printf "%b===>%b brew doctor --verbose%b\n" "${GREEN}" "${WHITE_BOLD}" "${NO_COLOR}" && \
    brew doctor --verbose
