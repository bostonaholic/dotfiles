#!/usr/bin/env bash
################################################################################
# Git AI Commit (Interactive)
#
# DESCRIPTION:
#   Generates AI-powered commit messages for staged changes using Claude CLI.
#   Analyzes the diff and recent commit history to create conventional,
#   meaningful commit messages. Provides interactive prompts to accept, edit,
#   or reject the generated message.
#
# USAGE:
#   git ai-commit [-c "additional context"]
#
# OPTIONS:
#   -c CONTEXT  - Optional additional context to guide message generation
#
# EXAMPLES:
#   git add .
#   git ai-commit                        # Generate message for staged changes
#   git ai-commit -c "Fixing bug #123"  # Provide extra context
#
# WORKFLOW:
#   1. Analyzes staged git diff
#   2. Reviews recent commit messages for style consistency
#   3. Generates commit message using Claude AI
#   4. Displays message and prompts: [Y]es / [N]o / [E]dit
#   5. Creates commit or allows editing before committing
#
# DEPENDENCIES:
#   - git (with staged changes)
#   - claude CLI (Anthropic's Claude CLI tool)
#   - git-ai-commit-msg (helper script for message generation)
#
# NOTES:
#   This is the interactive version. Use git-ai-commit-msg for non-interactive
#   message generation (useful in git hooks or automation).
#
################################################################################

set -euo pipefail

# shellcheck disable=SC1091
source "${HOME}/.colors"

# Parse command line arguments
USER_CONTEXT=""
while getopts "c:" opt; do
    case $opt in
        c)
            USER_CONTEXT="$OPTARG"
            ;;
        \?)
            printf '%sError: Invalid option: -%s. Usage: git-ai-commit [-c "context"]%s\n' "${RED}" "$OPTARG" "${NC}" >&2
            exit 1
            ;;
        :)
            printf '%sError: Option -%s requires an argument%s\n' "${RED}" "$OPTARG" "${NC}" >&2
            exit 1
            ;;
    esac
done

# Check if we're in a git repository
if ! git rev-parse --git-dir > /dev/null 2>&1; then
    printf '%sError: Not in a git repository%s\n' "${RED}" "${NC}" >&2
    exit 1
fi

# Check if there are staged changes
if git diff --cached --quiet; then
    printf "%sError: No staged changes to commit. Use 'git add' to stage changes first.%s\n" "${RED}" "${NC}" >&2
    exit 1
fi

# Generate commit message using git-ai-commit-msg
# Use the same directory as this script to find git-ai-commit-msg
SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
printf '%sAnalyzing staged changes...%s\n' "${BLUE}" "${NC}"
COMMIT_MSG=$("$SCRIPT_DIR/git-ai-commit-msg" "$USER_CONTEXT" 2>&1)
EXIT_CODE=$?

if [ $EXIT_CODE -ne 0 ] || [ -z "$COMMIT_MSG" ]; then
    printf '%sError: Failed to generate commit message: %s%s\n' "${RED}" "$COMMIT_MSG" "${NC}" >&2
    exit 1
fi

# Display the generated message
echo ""
printf '%sGenerated commit message:%s\n' "${GREEN}" "${NC}"
echo "─────────────────────────────────────────"
echo "$COMMIT_MSG"
echo "─────────────────────────────────────────"
echo ""

# Ask for confirmation
read -p "$(echo -e "${BLUE}Use this message? [Y/n/e]${NC} ")" -n 1 -r
echo ""

case $REPLY in
    [Ee]*)
        # Edit the message
        TEMP_FILE=$(mktemp)
        trap 'rm -f "$TEMP_FILE"' EXIT
        echo "$COMMIT_MSG" > "$TEMP_FILE"
        ${EDITOR:-vim} "$TEMP_FILE"
        COMMIT_MSG=$(cat "$TEMP_FILE")

        if [ -z "$COMMIT_MSG" ]; then
            printf '%sError: Commit message is empty. Aborting.%s\n' "${RED}" "${NC}" >&2
            exit 1
        fi

        printf '%sCommitting with edited message...%s\n' "${BLUE}" "${NC}"
        git commit -F - <<< "$COMMIT_MSG"
        printf '%s✓ Commit created successfully!%s\n' "${GREEN}" "${NC}"
        ;;
    [Nn]*)
        printf '%sCommit aborted.%s\n' "${YELLOW}" "${NC}"
        exit 1
        ;;
    *)
        # Default: yes
        printf '%sCommitting...%s\n' "${BLUE}" "${NC}"
        git commit -F - <<< "$COMMIT_MSG"
        printf '%s✓ Commit created successfully!%s\n' "${GREEN}" "${NC}"
        ;;
esac
