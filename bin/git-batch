#!/bin/bash
#
# Run git commands in all git projects
#
# $ git batch status -sb
#

#
# TODO: nested directories
#

set -eu -o pipefail

DIRECTORIES=$(ls -d "*/")

for d in $DIRECTORIES
do
    if [[ -d "$d/.git" ]]; then
        (
            cd "$d"
            pwd
            git "$@"
        )
        echo
    fi
done
