#!/usr/bin/python

#
# Print a diff summary like:
#
#   $ git diff 'master~10..master' | gn
#   293 lines of diff
#   185 lines added
#   19 lines removed
#   +166 lines net change

import sys, os, re, fileinput

def get_lines(diff_lines):
    # Added lines start with '+' (but not '+++', because that marks a new
    # file).  The same goes for removed lines, except '-' instead of '+'.
    added_lines = [line for line in diff_lines
        if line.startswith('+') and not line.startswith('+++')]
    removed_lines = [line for line in diff_lines
        if line.startswith('-') and not line.startswith('---')]
    return added_lines, removed_lines

def file_name(diff_line):
    return diff_line[6:]

def get_modified_files(diff_lines):
    modified_files = [line for line in diff_lines
        if line.startswith('+++') or line.startswith('---')]
    return set(map(file_name, modified_files))

if __name__ == '__main__':
    DIFF = '\033[93m'
    ADDED = '\033[92m'
    REMOVED = '\033[91m'
    NET = '\033[94m'
    WHITE = '\033[0m'
    diff_lines = list(fileinput.input())
    added_lines, removed_lines = get_lines(diff_lines)
    modified_files = get_modified_files(diff_lines)
    print WHITE + '%i modified files' % len(modified_files)
    print DIFF + '%i lines of diff' % len(diff_lines)
    print ADDED + '%i lines added' % len(added_lines)
    print REMOVED + '%i lines removed' % len(removed_lines)
    print NET + '%+i lines net change' % (len(added_lines) - len(removed_lines))
