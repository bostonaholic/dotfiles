[init]
[user]
	name = Matthew Boston
	email = matthew@matthewboston.com
	signingkey = 2114586C7C49B659
[github]
	user = bostonaholic
[gpg]
	program = /usr/local/bin/gpg
[help]
	autocorrect = 1
[color]
	ui = auto
[commit]
	verbose = true
	gpgsign = true
[core]
	excludesfile = $HOME/.gitignore_global
	editor = vim
[diff]
	renames = true
	noprefix = true
[fetch]
	prune = true
[push]
	default = tracking
[pull]
	default = tracking
	tags = true
	rebase = true
[rebase]
	autoStash = true
[rerere]
	autoupdate = true
	enabled = true
[remote "origin"]
	prune = true
[alias]
	aliases = config --get-regexp "alias.*"

	aa = add --all
	ap = add --patch

	br = branch
	bra = branch --all
	bd = branch -d
	bdd = branch -D
	brr = branch --move

	amend = commit --amend
	cl = clone
	ci = commit -m
	co = checkout
	pu = push
	psu = push --set-upstream

	di = diff
	dc = diff --cached
	ds = diff --staged
	dw = diff --word-diff=plain

	ft = fetch --tags
	fa = fetch --all --tags

	upstream = "!git fetch upstream; git merge upstream/master"
	u = !git upstream

	l = "!. $HOME/.githelpers && pretty_git_log"
	la = !git l --all
	recent = !GIT_NO_PAGER=1 git l -30
	r = !git recent
	rall = !git recent --all

	head = !git l -1
	h = !git head
	hp = "!. $HOME/.githelpers && show_git_head"

	ra = rebase --abort
	rc = rebase --continue

	remotes = remote --verbose

	stashes = stash list

	st = status --short --branch


	refresh = !git stash && git checkout master && git pull origin master && git checkout - && git rebase master && git stash pop

	productivity = "!git log --pretty='%aN' | sort | uniq -c | sort -nr"

	laf = fsck --lost-found
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
