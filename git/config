[init]
	defaultBranch = main
[user]
	name = Matthew Boston
	email = matthew@matthewboston.com
	signingkey = ssh-rsa 
[github]
	user = bostonaholic
[gpg]
	format = ssh
[gpg "ssh"]
	allowedSignersFile = "/Users/matthew/.config/git/allowed_signers"
  program = "/Applications/1Password.app/Contents/MacOS/op-ssh-sign"
[help]
	autocorrect = 1
[color]
	ui = auto
[commit]
	verbose = true
	gpgsign = true
[core]
	editor = vim
	logAllRefUpdates = always
[diff]
	renames = true
	noprefix = true
[fetch]
	prune = true
[push]
	default = tracking
[pull]
	default = tracking
	tags = true
	rebase = true
[rebase]
	autoStash = true
[rerere]
	autoupdate = true
	enabled = true
[remote "origin"]
	prune = true
[alias]
	aliases = config --get-regexp "alias.*"

	aa = add --all
	ap = add --patch

	b = "!. $HOME/.config/git/helpers && pretty_git_branch"
	bs = "!. $HOME/.config/git/helpers && pretty_git_branch_sorted"
	br = branch
	bra = branch --all
	bd = branch -d
	bdd = branch -D
	brr = branch --move

	amend = commit --amend
	amend-noe = commit --amend --no-edit
	cl = clone
	ci = commit
    cm = commit -m
	co = checkout
	pu = push
	psu = push --set-upstream

	di = diff
	dh = diff HEAD
	dc = diff --cached
	ds = diff --staged
	dw = diff --word-diff=plain

	ft = fetch --tags
	fa = fetch --all --tags

	upstream = "!git fetch upstream; git merge upstream/main"
	u = !git upstream

	l = "!. $HOME/.config/git/helpers && pretty_git_log"
	la = !git l --all
	recent = !GIT_NO_PAGER=1 git l -30
	r = !git recent
	rall = !git recent --all

	head = !git l -1
	h = !git head
	hp = "!. $HOME/.config/git/helpers && show_git_head"

	ra = rebase --abort
	rc = rebase --continue

	remotes = remote --verbose

	stashes = stash list

	st = status --short --branch

	refresh = !git stash && git checkout main && git pull origin main && git checkout - && git rebase main && git stash pop

	laf = fsck --lost-found
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[tag]
	forceSignAnnotated = true

[includeIf "gitdir:~/code/work/"]
  path = config.work
