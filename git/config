[init]
	defaultBranch = main
[user]
	name = Matthew Boston
	email = matthew@matthewboston.com
    signingkey = ssh-ed25519 AAAAC3NzaC1lZDI1NTE5AAAAIE/Td3mQW2mRE16TknR3WX8SRfn1Xm2xTwrPBsm32QWn
[github]
	user = bostonaholic
[gpg]
	format = ssh
[gpg "ssh"]
	allowedSignersFile = ~/.config/git/allowed_signers
    program = "/Applications/1Password.app/Contents/MacOS/op-ssh-sign"
[help]
	autocorrect = 1
[color]
	ui = auto
[commit]
	verbose = true
	gpgsign = true
[core]
	editor = vim
	logAllRefUpdates = always
[diff]
	renames = true
	noprefix = true
[fetch]
	prune = true
[push]
	autoSetupRemote = true
[pull]
	default = tracking
	tags = true
	rebase = true
[rebase]
	autosquash = true
	autostash = true
[rerere]
	autoupdate = true
	enabled = true
[remote "origin"]
	prune = true
[alias]
	aliases = !git config --get-regexp "alias.*" | cut -c 7-

	aa = add --all
	ap = add --patch

	b = "!. $HOME/.config/git/helpers && pretty_git_branch"
	bs = "!. $HOME/.config/git/helpers && pretty_git_branch_sorted"
	br = branch
	bra = branch --all
	bd = branch -d
	bdd = branch -D
	brr = branch --move

	amend = commit --amend
	amend-noe = commit --amend --no-edit
	cl = clone
	ci = commit
	cm = commit -m
	co = checkout
	pu = push
	psu = push --set-upstream

	di = diff
	dh = diff HEAD
	dc = diff --cached
	ds = diff --staged
	dw = diff --word-diff=plain

	ft = fetch --tags
	fa = fetch --all --tags

	upstream = "!git fetch upstream; git merge upstream/main"
	u = !git upstream

	l = "!. $HOME/.config/git/helpers && pretty_git_log"
	la = !git l --all
	recent = "!f() { GIT_NO_PAGER=1 git l -${1:-10}; }; f"
	r = !git recent $1
	rall = !git recent --all

	last = log -1 HEAD --stat --show-signature
	head = !git l -1
	h = !git head
	hp = "!. $HOME/.config/git/helpers && show_git_head"

	ra = rebase --abort
	rc = rebase --continue
	rs = rebase --skip
	rq = rebase --quit

	remotes = remote --verbose

	stashes = stash list
	sl = stashes

	st = status --short --branch

	unstage = reset HEAD --

	# Refresh the current branch with the latest changes from main
	refresh = !git stash && git checkout main && git pull origin main && git checkout - && git rebase main && (git stash pop || true)

	laf = fsck --lost-found
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[tag]
	# GPG sign annotated tags by default
	forceSignAnnotated = true
[includeIf "gitdir:~/code/work/"]
	path = config.work
