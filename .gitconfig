[user]
  name = Matthew Boston
  email = matthew.boston@gmail.com
[github]
  user = bostonaholic
[color]
  branch = auto
  diff = auto
  status = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[core]
  excludesfile = ~/.gitignore_global
  editor = emacs
[push]
  default = tracking
[pull]
  default = tracking
[alias]
  st = status
  ci = commit
  co = checkout
  dc = diff --cached
  di = diff
  amend = commit --amend
  aa = add --all
  fa = fetch --all
  b = branch

  upstream = "!git fetch upstream; git merge upstream/master"
  u = !git upstream

  unpull = reset --hard HEAD@{1}

  head = !git l -1
  h = !git head

  l = "!source ~/.githelpers && pretty_git_log"
  la = !git l --all
  r = !git l -30
  ra = !git r --all
