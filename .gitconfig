[user]
  name = Matthew Boston
  email = matthew.boston@gmail.com
[github]
  user = bostonaholic
[color]
  branch = auto
  diff = auto
  status = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[core]
  excludesfile = ~/.gitignore_global
  editor = emacs
[push]
  default = matching
[alias]
  aa = add --all
  amend = commit --amend
  b = branch
  ci = commit
  co = checkout
  dc = diff --cached
  di = diff
  fa = fetch --all
  head = !git l -1
  h = !git head
  l = "!. ~/.githelpers && pretty_git_log"
  la = !git l --all
  recent = !git l -30
  r = !git recent
  ra = !git r --all
  st = status
  upstream = "!git fetch upstream; git merge upstream/master"
  u = !git upstream
