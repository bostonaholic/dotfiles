[init]
  templatedir = ~/.git_template
[user]
  name = Matthew Boston
  email = matthew.boston@gmail.com
[github]
  user = bostonaholic
[help]
  autocorrect = 1
[color]
  branch = auto
  diff = auto
  status = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[core]
  excludesfile = ~/.gitignore_global
  editor = vim
[push]
  default = tracking
[pull]
  default = tracking
  rebase = true
[rerere]
  enabled = true
[alias]
  aa = add --all
  ap = add --patch

  br = branch
  bra = branch --all

  amend = commit --amend
  cl = clone
  ci = commit --verbose
  co = checkout
  pu = push

  ctags = "!.git/hooks/ctags"

  di = diff
  dc = diff --cached
  ds = diff --staged

  fa = fetch --all

  upstream = "!git fetch upstream; git merge upstream/master"
  u = !git upstream

  unmerge = reset --hard HEAD@{1}
  unpull = reset --hard HEAD@{1}

  head = !git l -1
  h = !git head

  fa = !git fetch --all

  l = "!source ~/.githelpers && pretty_git_log"
  la = !git l --all
  recent = !git l -30
  r = !git recent
  ra = !git recent --all

  iteration = "!git log --pretty='tformat:%h (%ar) -- %d %s' --since='2 weeks ago' --author=`git config user.email`"

  productivity = !git log --pretty="%aN" | sort | uniq -c | sort -nr

  rv = remote --verbose

  st = status -sb
