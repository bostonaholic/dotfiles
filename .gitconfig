[init]
[user]
	name = Matthew Boston
	email = matthew@matthewboston.com
	signingkey = 2114586C7C49B659
[github]
	user = bostonaholic
[gpg]
	program = /usr/local/bin/gpg
[help]
	autocorrect = 1
[color]
	ui = auto
[commit]
	verbose = true
	gpgsign = true
[core]
	excludesfile = ~/.gitignore_global
	editor = vim
[diff]
	renames = true
[fetch]
	prune = true
[push]
	default = tracking
[pull]
	default = tracking
	rebase = preserve
	tags = true
[rerere]
	autoupdate = true
	enabled = true
[alias]
	aa = add --all
	ap = add --patch

	br = branch
	bra = branch --all

	amend = commit --amend
	cl = clone
	ci = commit
	co = checkout
	pu = push

	di = diff
	dc = diff --cached
	ds = diff --staged
	dw = diff --word-diff=plain

	ft = fetch --tags
	fa = fetch --all --tags

	upstream = "!git fetch upstream; git merge upstream/master"
	u = !git upstream

	head = !git l -1
	h = !git head
	hp = "!. ~/.githelpers && show_git_head"

	l = "!. ~/.githelpers && pretty_git_log"
	la = !git l --all
	recent = !GIT_NO_PAGER=1 git l -30
	r = !git recent
	ra = !git recent --all

	refresh = !git stash && git checkout master && git pull origin master && git checkout - && git rebase master && git stash pop

	productivity = "!git log --pretty='%aN' | sort | uniq -c | sort -nr"

	rv = remote --verbose

	st = status --short --branch