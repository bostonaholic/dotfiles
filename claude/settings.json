{
  "env": {
    "MAX_THINKING_TOKENS": "31999"
  },
  "includeCoAuthoredBy": false,
  "permissions": {
    "allow": [
      "Bash(awk:*)",
      "Bash(cat:*)",
      "Bash(cut:*)",
      "Bash(date:*)",
      "Bash(diff:*)",
      "Bash(env:*)",
      "Bash(file:*)",
      "Bash(git:*)",
      "Bash(gh:*)",
      "Bash(grep:*)",
      "Bash(ps:*)",
      "Bash(pwd:*)",
      "Bash(sort:*)",
      "Bash(stat:*)",
      "Bash(tail:*)",
      "Bash(tr:*)",
      "Bash(uname:*)",
      "Bash(uniq:*)",
      "Bash(wc:*)",
      "Bash(which:*)",
      "Bash(whoami:*)"
    ],
    "deny": [
      "Read(.env*)",
      "Bash(rm -rf:*)"
    ],
    "ask": [
      "Bash(git push:*)"
    ]
  },
  "hooks": {
    "Notification": [
      {
        "matcher": "idle_prompt",
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/bin/alerter -title 'Claude Code' -message 'Waiting for input' -appIcon $HOME/bin/icons/claude.png -sound Hero -group claude-idle"
          }
        ]
      },
      {
        "matcher": "permission_prompt",
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/bin/alerter -title 'Claude Code' -message 'Needs permission' -appIcon $HOME/bin/icons/claude.png -sound Hero -group claude-permission"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "bb ~/.claude/statusline.clj"
  },
  "enabledPlugins": {
    "superpowers@superpowers-marketplace": true,
    "ralph-loop@claude-plugins-official": true,
    "playwright@claude-plugins-official": true,
    "plugin-dev@claude-plugins-official": true
  },
  "alwaysThinkingEnabled": true
}
